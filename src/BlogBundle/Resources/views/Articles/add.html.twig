{% extends "::base.html.twig" %}


{% block title %}Blog - Ajout d'un article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/add.css') }}"/>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <h2>Ajouter un article</h2>
            <p>Avec les themes sélectionnés </p>

            <div class="col-xs-12">
                {{ form_start(article_form) }}
                <div class="form-group">
                    {{ form_label(article_form.title, 'Titre de l\'article') }}
                    {% if form_errors(article_form.title) %}
                        <div class="alert alert-danger">
                            <strong>Erreur !</strong> {{ form_errors(article_form.title) }}
                        </div>
                    {% endif %}
                    {{ form_widget(article_form.title, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(article_form.content, 'Contenu de l\'article') }}
                    {% if form_errors(article_form.content) %}
                        <div class="alert alert-danger">
                            <strong>Erreur !</strong> {{ form_errors(article_form.content) }}
                        </div>
                    {% endif %}
                    {{ form_widget(article_form.content, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(article_form.themes, 'Thèmes de l\'article (sélectionner avec CTRL ou CMD)') }}
                    {% if form_errors(article_form.themes) %}
                        <div class="alert alert-danger">
                            <strong>Erreur !</strong> {{ form_errors(article_form.themes) }}
                        </div>
                    {% endif %}
                    {{ form_widget(article_form.themes, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>

                {{ form_widget(article_form.submit, {'attr': {'class': 'btn btn-primaryr'}}) }}

                {{ form_end(article_form) }}
            </div>
            {{ form_end(article_form) }}
        </div>

    </div>
{% endblock %}