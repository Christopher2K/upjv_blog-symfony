{% extends "::base.html.twig" %}

{% block title %}Blog - modification d'un article {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/modifier.css') }}"/>
{%  endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h1>Modification</h1>
            <p>De l'article <b>{{ article.title }}</b></p>
            <p><a href="{{ path('article_delete', { 'id': article.id })}}">Supprimer l'article</a></p>
        </div>
        <div class="row">
            {{ form_start(myForm) }}
            <div class="form-group">
                {{ form_label(myForm.title, 'Titre de l\'article') }}
                {% if form_errors(myForm.title) %}
                    <div class="alert alert-danger">
                        <strong>Erreur !</strong> {{ form_errors(myForm.title) }}
                    </div>
                {% endif %}
                {{ form_widget(myForm.title, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(myForm.content, 'Contenu de l\'article') }}
                {% if form_errors(myForm.content) %}
                    <div class="alert alert-danger">
                        <strong>Erreur !</strong> {{ form_errors(myForm.content) }}
                    </div>
                {% endif %}
                {{ form_widget(myForm.content, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(myForm.themes, 'Thèmes de l\'article (sélectionner avec CTRL ou CMD)') }}
                {% if form_errors(myForm.themes) %}
                    <div class="alert alert-danger">
                        <strong>Erreur !</strong> {{ form_errors(myForm.themes) }}
                    </div>
                {% endif %}
                {{ form_widget(myForm.themes, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>

            {{ form_widget(myForm.submit, {'attr': {'class': 'btn btn-primaryr'}}) }}

            {{ form_end(myForm) }}
        </div>
        {{ form_end(myForm) }}
        </div>
    </div>
{% endblock %}
